<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#F9F9F9"
    android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="10dp"
            android:orientation="horizontal"
            android:background="@drawable/xk">
        <cn.edu.hznu.application.XCRoundImageView
            android:id="@+id/roundImageView"
            android:layout_gravity="center_vertical"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:src="@drawable/avatar"/>
        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/roundImageView"
            android:text="用户名"
            android:textColor="#FFFFFF"
            android:textSize="20dp"/>

        </RelativeLayout>
<RelativeLayout
    android:id="@+id/upd_password"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:clickable="true"
    android:padding="10dp"
    android:background="#FFFFFF"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/lock_img"
        android:background="@drawable/lock"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="修改密码"
        android:textSize="15dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/lock_img"/>
    <ImageView
        android:background="@drawable/right"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/my_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/post"
            android:background="@drawable/post"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="我的帖子"
            android:textSize="15dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/post"/>
        <ImageView
            android:background="@drawable/right"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>
    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/logout"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/logout_btn"
        android:text="退    出    登     陆"
        android:textColor="#FFF"
        android:textSize="20dp" />

</LinearLayout>